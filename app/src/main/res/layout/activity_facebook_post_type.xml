<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookPostType">

    <TextView
        android:id="@+id/txtSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Select the type of post you want to create:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFacebookText"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fb_style"
        android:clickable="true"
        android:text="Text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnPostInstagram"
        app:layout_constraintStart_toStartOf="@+id/txtSelect"
        app:layout_constraintTop_toBottomOf="@+id/txtSelect" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFacebookPhoto"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fb_style"
        android:clickable="true"
        android:text="Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnFacebookText"
        app:layout_constraintStart_toStartOf="@+id/btnFacebookText"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebookText" />

</androidx.constraintlayout.widget.ConstraintLayout>